<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B2C5DC"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:paddingTop="20dp"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textSize="48dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="22"
            android:background="@android:color/holo_orange_light"
            android:weightSum="40">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="9"
                android:weightSum="4">

                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:text="%"
                    android:textColor="#009688"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonSumAndMin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="numberEvent"
                    android:text="+/-"
                    android:textColor="#009688"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonAC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="deleteEvent"
                    android:text="AC"
                    android:textColor="#F44336"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="/"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="operationEvent"
                    android:textColor="#009688"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="8"
                android:weightSum="4">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:shadowColor="#009688"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="numberEvent"
                    android:text="9"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonMult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="operationEvent"
                    android:text="x"
                    android:textColor="#009688"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="6.5"
                android:weightSum="4">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent" />

                <Button
                    android:id="@+id/buttonMin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="0dp"
                    android:paddingBottom="15dp"
                    android:text="-"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="operationEvent"
                    android:textColor="#009688"
                    android:textSize="28dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="7.2"
                android:weightSum="4">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:text="1"
                    android:textColor="#181919"
                    android:onClick="numberEvent"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="numberEvent"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:backgroundTint="@color/colorAccent"
                    android:textColorHighlight="#009688"
                    android:onClick="numberEvent"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonSum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="operationEvent"
                    android:textColor="#009688"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:weightSum="5">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="25dp"
                    android:layout_weight="3"
                    android:onClick="numberEvent"
                    android:backgroundTint="@color/colorAccent" />


                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="="
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="equivalentEqualsEvent"
                    android:textSize="25dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
